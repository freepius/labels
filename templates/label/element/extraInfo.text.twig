{% set separator = '  &ndash;  ' %}

{% set info = label.extraInfo ?? [] %}
{% set isArray = info is iterable %}
{% set info = (isArray ? info : [info])|join( separator ) %}

{% set info = info|replace({
    (separator ~ '<tspan dx='): '<tspan dx=',
}) %}

{% if info is not empty %}
    {{ info|raw }}
{% endif %}